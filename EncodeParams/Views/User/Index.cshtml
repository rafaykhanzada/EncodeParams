@model IEnumerable<EncodeParams.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="encode">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="encode"> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="encode">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var anchors = document.querySelectorAll('.encode');
        Array.prototype.forEach.call(anchors, function (element, index) {
            const value = element.href.substring(0, element.href.lastIndexOf("/"));
            element.href = value + '?id=' + encryptPass(element.href.split("/").pop())
            console.log(element.href)

        });
    })
</script>